<div class="flex flex-col h-full overflow-hidden">
  <Tabs as |t|>
    <div class='p-4 text-sm bg-white shadow'>
      <t.Tab>JSON</t.Tab>
      <t.Tab>Headers</t.Tab>
    </div>

    <div class="flex-1 overflow-y-scroll {{if (not this.hasResponse) 'flex justify-center items-center'}}">
      <t.Panel>
        {{#if this.response}}
          <pre class='px-4 pt-6 text-xs'>
            {{~this.json}}
          </pre>
        {{else}}
          <p class="text-gray-400">Make a request to see response data.</p>
        {{/if}}
      </t.Panel>

      <t.Panel>
        {{#if this.response}}
          <dl class='mt-8 bg-white'>
            {{#each-in this.headers as |header value|}}
              <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-4">
                <dt class="text-sm font-medium leading-5 text-gray-500">
                  {{header}}
                </dt>
                <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
                  {{value}}
                </dd>
              </div>
            {{/each-in}}
          </dl>
        {{else}}
          <p class="text-gray-400">Make a request to see response data.</p>
        {{/if}}
      </t.Panel>
    </div>
  </Tabs>
</div>